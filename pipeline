pipeline {
    agent any
    tools {
        maven "put_your_mavenconfiguration_here"
        jdk "put_your_mavenconfiguration_here"
    }
    stages{
        stage('Fetch code') {
          steps{
              git branch: 'put_your_git_branch_here', url:'https://github.com/xxxx/xxxx.git'
          }  
        }
        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
            post {
                success {
                    echo "Now Archiving."
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }
        stage('Test'){
            steps {
                sh 'mvn test'
            }
        }
        stage('Checkstyle Analysis'){
            steps {
                sh 'mvn checkstyle:checkstyle'
            }
        }
    }
}
